#include <stdio.h>

int main()
{
    int i, j, k, w = 10, sum = 0;
    for(k = 0 ; k < w ; k++ )
    {
        for(i = w+2-k ; i > 0 ; i--)
        {
            for(j = i ; j > 0 ; j--)
            {
                printf("*");
                sum = sum + 1;
            }
        printf("\n");
        }
    }
    printf("Liczba uzytych znak√≥w to %d.\n", sum);
    return 0;
}
